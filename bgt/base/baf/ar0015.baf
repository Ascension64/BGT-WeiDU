IF
    OnCreation()
    Global("NewBG1","AR0015",0)
THEN
    RESPONSE #100
        DayNight(NOON)
        StartMovie("BGINTRO")
        SmallWait(1)
        SetGlobal("Chapter","GLOBAL",-1)
        IncrementChapter("Chptxt-0")
        ReallyForceSpell(Player1,LOSE_ALL)
        SetGlobal("Chapter","GLOBAL",1)
        SetGlobal("NewBG1","AR0015",2)
        TakeItemListParty("BG1START")
        TriggerActivation("DOOR6543",FALSE)
        Explore()
        Continue()
END

