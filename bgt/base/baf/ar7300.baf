IF
  OnCreation()
  Global("Chapter","GLOBAL",8)
  Global("BillSpawn","GLOBAL",0)
  !Exists("BILL")
THEN
  RESPONSE #100
    CreateCreature("BILL",[1962.2834],0)
    SetGlobal("BillSpawn","GLOBAL",1)
    Continue()
END

