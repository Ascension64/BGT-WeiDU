IF
  OnCreation()
  Global("ENDOFBG1","GLOBAL",0)
  Global("Chapter","GLOBAL",8)
  Global("WirthiSpawn","GLOBAL",0)
  !Exists("WIRTHING")
THEN
  RESPONSE #100
    CreateCreature("WIRTHI",[636.311],0)
    SetGlobal("WirthiSpawn","GLOBAL",1)
