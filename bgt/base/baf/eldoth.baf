IF
	GlobalTimerExpired("RescueSkie","GLOBAL")
	!InParty("Skie")
	!Dead("Skie")
	InParty("Eldoth")
THEN
	RESPONSE #100
		Dialogue([PC])
END

IF
	See("Skie")
	Global("RescuedSkie","GLOBAL",0)
THEN
	RESPONSE #100
		SetGlobal("RescuedSkie","GLOBAL",1)
		StartDialogueNoSet("Skie")
END