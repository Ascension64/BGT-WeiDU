IF
  OnCreation()
  Global("ENDOFBG1","GLOBAL",0)
  Global("Chapter","GLOBAL",8)
  Global("AddySpawn","GLOBAL",0)
  !Exists("ADDY")
THEN
  RESPONSE #100
    CreateCreature("ADDY",[2664.2874],0)
    SetGlobal("AddySpawn","GLOBAL",1)
    Continue()
END

IF
  Exists("ADDY")
  !Global("ENDOFBG1","GLOBAL",0)
THEN
  RESPONSE #100
    ActionOverride("ADDY",DestroySelf())
END

