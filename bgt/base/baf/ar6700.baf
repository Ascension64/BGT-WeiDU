IF
  OnCreation()
  Global("Chapter","GLOBAL",4)
  Global("ChloeSpawn","GLOBAL",0)
  !Exists("Chloe")
  !Dead("Chloe")
THEN
  RESPONSE #100
    SetGlobal("ChloeSpawn","GLOBAL",1)
    CreateCreature("CHLOE",[4127.2881],0)
    Continue()
END

