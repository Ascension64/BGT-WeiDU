IF
	Global("Yeslickfight","GLOBAL",2)
	See("Kagain")
	!Range("Kagain",5)
THEN
	RESPONSE #100
		EquipRanged()
		AttackReevaluate("Kagain",15)
END

IF
	Global("Yeslickfight","GLOBAL",2)
	See("Kagain")
	Range("Kagain",5)
THEN
	RESPONSE #100
		EquipMostDamagingMelee()
		AttackReevaluate("Kagain",15)
END

IF
	GlobalTimerExpired("Yeslick","GLOBAL")
	Global("FLOODED","GLOBAL",0)
THEN
	RESPONSE #100
		Dialogue([PC])
END


